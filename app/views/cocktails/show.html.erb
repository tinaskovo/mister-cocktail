<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <h2>Recipe</h2>
      <% @cocktail.doses.each do |dose| %>
        <p><%= "#{dose.description} of #{dose.ingredient.name}" %></p>
        <%= link_to "Destroy", dose_path(dose), method: :delete, class: "btn btn-warning" %>
      <% end %>

      <h3>Add a new dose</h3>
      <%= render 'dose_form' %>

      <br><br>
      <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
